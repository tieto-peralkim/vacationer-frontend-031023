{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES6",
    "ignoreDeprecations": "5.0",
    "jsx": "react-jsx",
    "plugins": [{"name": "typescript-plugin-css-modules"}],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["src"]
}